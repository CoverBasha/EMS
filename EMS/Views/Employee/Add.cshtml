@model Employee

@{
    ViewData["Title"] = "Add Employee";
}

<h1>@ViewData["Title"]</h1>

<br />
@if (Model != null)
{
    if (!ViewBag.ModelState)
    {
        <div asp-validation-summary="All" class="alert alert-danger text-danger col-4 pt-3 pb-2"></div>
    }
    else
    {
        <div class="alert alert-success text-success">Employee has been added.</div>
    }
}

<form method="post" asp-controller="Employee" asp-action="PostAdd">
    <div class="mb-3 col-3">
        <label for="nameInput" class="form-label" asp-for="Name"></label>
        <input type="text" class="form-control" id="nameInput" aria-describedby="nameHelp" asp-for="Name">
        <div id="nameHelp" class="form-text">Could be your real name or nickname.</div>
    </div>

    <div class="mb-3 col-3">
        <label for="emailInput" class="form-label" asp-for="Email"></label>
        <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp" asp-for="Email">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>

    <div class="mb-3 col-3">
        <label for="phoneInput" class="form-label" asp-for="Phone"></label>
        <input type="text" class="form-control" id="phoneInput" aria-describedby="phoneHelp" asp-for="Phone">
        <div id="phoneHelp" class="form-text">Your local phone number.</div>
    </div>

    <div class="mb-3 col-3">
        <label for="deptInput" class="form-label" asp-for="Department"></label>
        <input type="text" class="form-control" id="deptInput" aria-describedby="deptHelp" asp-for="Department">
        <div id="deptHelp" class="form-text">Which department this employee will work in.</div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-danger" asp-action="Index">Back</a>
</form>