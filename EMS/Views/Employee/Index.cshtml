@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1>@ViewData["Title"]</h1>

<br />
<h6>@Model.Count() employees found.</h6>

<br />
<a class="btn btn-primary" asp-action="Add">Add</a>

<br />
<br />

<table class="table table-bordered table-hover">
    <thead class="table-warning">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Id)</th>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Email)</th>
            <th>@Html.DisplayNameFor(x => x.Phone)</th>
            <th>@Html.DisplayNameFor(x => x.Department)</th>
            <th class="col-2" style="text-align: center;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <th class="table-middle">@Html.DisplayFor(x => emp.Id)</th>
                <td class="table-middle">@Html.DisplayFor(x => emp.Name)</td>
                <td class="table-middle">@Html.DisplayFor(x => emp.Email)</td>
                <td class="table-middle">@Html.DisplayFor(x => emp.Phone)</td>
                <td class="table-middle">@Html.DisplayFor(x => emp.Department)</td>
                <td>
                    <a class="btn table-btn btn-primary ms-3" asp-action="Edit" asp-route-id="@emp.Id">Update</a>
                    <a class="btn table-btn btn-danger ms-2" asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>

    </tfoot>
</table>